<Window x:Class="KolejeStudenckie.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="800"
        >
    <Grid>
        <TextBlock HorizontalAlignment="Center" FontSize="30" Text="Koleje Studenckie" VerticalAlignment="Top" Margin="0,10,0,0"/>
        <Button Content="Mapa" HorizontalAlignment="Center" Margin="0,149,0,0" VerticalAlignment="Top" Command="{Binding OpenMapPanelCommand}"  Height="40" Width="120"/>
        <Button Content="Aministracja" HorizontalAlignment="Center" Margin="0,104,0,0" VerticalAlignment="Top" Command="{Binding OpenAdminPanelCommand}" Height="40" Width="120"/>
        <Button Content="Rozkład Jazdy" HorizontalAlignment="Center" Margin="0,194,0,0" VerticalAlignment="Top" Command="{Binding OpenSchedulePanelCommand}" Height="40" Width="120"/>
    </Grid>
</Window>
